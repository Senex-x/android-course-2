<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_controls_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/track_duration_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/track_elapsed_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_8"
            android:text="@string/time_zero_minutes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/track_duration_progress_bar" />

        <TextView
            android:id="@+id/track_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/track_duration_progress_bar"
            tools:text="3:16" />

        <TextView
            android:id="@+id/current_track_name"
            style="@android:style/TextAppearance.Material.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toStartOf="@id/track_duration"
            app:layout_constraintStart_toEndOf="@id/track_elapsed_duration"
            app:layout_constraintTop_toBottomOf="@id/track_duration_progress_bar"
            tools:text="Current track name" />

        <TextView
            android:id="@+id/current_track_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toStartOf="@id/track_duration"
            app:layout_constraintStart_toEndOf="@id/track_elapsed_duration"
            app:layout_constraintTop_toBottomOf="@id/current_track_name"
            tools:text="Current track artist" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_track_artist">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/previous_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_skip_previous_24"
                app:iconSize="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/play_pause_button"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="@dimen/size_8"
                android:layout_marginEnd="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="14dp"
                app:iconSize="42dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Rounded"
                tools:icon="@drawable/ic_play_24" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/next_button"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_skip_next_24"
                app:iconSize="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>