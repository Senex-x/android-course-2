<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gray_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.MainActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        style="@style/card_view_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/size_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/main_frame_layout_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_image_view_min_height"
                app:layout_constraintBottom_toTopOf="@id/main_view_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_gravity="center"
                    android:id="@+id/main_image_view_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/main_image_view_min_height"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_image_80"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedSquare" />
            </FrameLayout>

            <View
                android:id="@+id/main_view_divider"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/gray_darker"
                android:layout_marginTop="@dimen/size_default"
                app:layout_constraintTop_toBottomOf="@id/main_frame_layout_picture"
                app:layout_constraintBottom_toTopOf="@id/main_button_upload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/main_button_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_button_upload_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_view_divider" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>