<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="text_view_style.header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_style.center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_default</item>
        <item name="android:layout_marginBottom">@dimen/size_default</item>
        <item name="android:layout_marginLeft">@dimen/size_default</item>
        <item name="android:layout_marginRight">@dimen/size_default</item>
    </style>

    <style name="card_view_style.no_margin_bottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="split_margin">
        <item name="android:layout_marginTop">@dimen/size_default</item>
        <item name="android:layout_marginBottom">@dimen/size_default</item>
        <item name="android:layout_marginLeft">@dimen/size_default</item>
        <item name="android:layout_marginRight">@dimen/size_default</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_view_style.toolbar_expanded">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1.7</item>
        <item name="android:shadowDy">1.5</item>
        <item name="android:shadowRadius">1.8</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>