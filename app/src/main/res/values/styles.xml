<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="text_view_style.header">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_style.center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="card_view_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/size_default</item>
        <item name="android:layout_marginBottom">@dimen/size_default</item>
        <item name="android:layout_marginLeft">@dimen/size_default</item>
        <item name="android:layout_marginRight">@dimen/size_default</item>
    </style>

    <style name="card_view_style.no_margin_bottom">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="split_margin">
        <item name="android:layout_marginTop">@dimen/size_default</item>
        <item name="android:layout_marginBottom">@dimen/size_default</item>
        <item name="android:layout_marginLeft">@dimen/size_default</item>
        <item name="android:layout_marginRight">@dimen/size_default</item>
    </style>
</resources>