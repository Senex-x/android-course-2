<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/emptyFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.senex.androidlab1.views.fragments.ListFragment"
        android:label="SampleFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_emptyFragment"
            app:destination="@id/emptyFragment" />
        <action
            android:id="@+id/action_listFragment_to_interactiveListFragment"
            app:destination="@id/interactiveListFragment" />
    </fragment>

    <fragment
        android:id="@+id/emptyFragment"
        android:name="com.senex.androidlab1.views.fragments.EmptyFragment"
        android:label="EmptyFragment"
        tools:layout="@layout/fragment_empty" >
        <action
            android:id="@+id/action_emptyFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_emptyFragment_to_interactiveListFragment"
            app:destination="@id/interactiveListFragment" />
    </fragment>
    <fragment
        android:id="@+id/interactiveListFragment"
        android:name="com.senex.androidlab1.views.fragments.InteractiveListFragment"
        android:label="InteractiveListFragment"
        tools:layout="@layout/fragment_interactive_list">
        <action
            android:id="@+id/action_interactiveListFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_interactiveListFragment_to_emptyFragment"
            app:destination="@id/emptyFragment" />
    </fragment>
</navigation>