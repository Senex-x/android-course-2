<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senex.androidlab1">
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/flask_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/flask_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidLab1">
        <activity
            android:name=".views.activities.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.wake.WakeActivity"
            android:parentActivityName=".views.activities.main.MainActivity">
        </activity>
        <receiver android:name=".views.activities.main.notifications.receivers.BootReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".views.activities.main.notifications.NotificationSender" />
    </application>
</manifest>